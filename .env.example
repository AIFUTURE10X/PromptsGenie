# Client-side API key (for Vite)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Server-side API key for Netlify Functions (used for Gemini text/image analysis)
GOOGLE_API_KEY=your_google_api_key_here

# Vertex AI Configuration (required for Imagen 3 image generation)
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_LOCATION=us-central1

# Service Account Credentials (required for Vertex AI authentication)
# This should be your entire service account JSON key file, minified to one line
# Example: {"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
# Get from: Google Cloud Console > IAM > Service Accounts > Create/Download Key
# Service account needs "Vertex AI User" role (roles/aiplatform.user)
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@....iam.gserviceaccount.com"}

VITE_GEMINI_MODEL_IMAGE=gemini-2.5-flash
VITE_GEMINI_MODEL_IMAGES=gemini-2.5-flash
VITE_GEMINI_MODEL_TEXT=gemini-2.5-flash
API_BASE_URL=http://localhost:5173
PORT=5173
SUPABASE_URL=
SUPABASE_KEY=
IMAGE_ANALYSIS_ENABLED=true
IMAGE_ANALYSIS_MAX_SIZE_MB=4
IMAGE_ANALYSIS_TIMEOUT_MS=30000