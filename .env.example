# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# Google AI Studio API Key (recommended for development/prototyping)
# Get from: https://aistudio.google.com/app/apikey
# Best for: rapid prototyping, simpler billing, easy setup
VITE_GEMINI_API_KEY=

# Standard Google API Key (alternative naming convention)
# Use this if you prefer standard Google API naming
GOOGLE_API_KEY=

# For production on GCP: Use service account with Vertex AI
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# Best for: production on GCP, org policies, VPC controls, audit logs
# Use with Workload Identity for better security (no key files)

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Gemini models (stable versions for better quota availability)
VITE_GEMINI_MODEL_IMAGES=gemini-1.5-flash
VITE_GEMINI_MODEL_TEXT=gemini-1.5-flash

# Image analyzer backend selection
IMAGE_ANALYZER_BACKEND=gemini
# Options: gemini, openai, local

# Service timeouts (milliseconds)
IMAGE_ANALYZER_TIMEOUT_MS=20000
GEMINI_REQUEST_TIMEOUT_MS=30000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# API Configuration
API_BASE_URL=http://localhost:8085
PORT=8085

# Feature flags
VITE_ENABLE_IMAGE_ANALYSIS=false
VITE_ENABLE_BATCH_PROCESSING=false

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Optional Supabase
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_SUPABASE_STATUS_PING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Logging levels: error, warn, info, debug
LOG_LEVEL=info
VITE_DEBUG_MODE=false

# Performance monitoring
VITE_ENABLE_METRICS=false

# =============================================================================
# SECURITY & DEPLOYMENT
# =============================================================================

# API key rotation tracking (for monitoring)
# API_KEY_ROTATION_DATE=2024-01-01

# Regional endpoints (for data residency)
# GEMINI_REGION=us-central1
# VERTEX_ENDPOINT_REGION=us-central1

# Security headers and CORS
# CORS_ORIGIN=http://localhost:8085
# ENABLE_SECURITY_HEADERS=true

# Rate limiting (requests per minute)
# API_RATE_LIMIT=60
# IMAGE_ANALYSIS_RATE_LIMIT=10

# =============================================================================
# DEPLOYMENT ENVIRONMENT EXAMPLES
# =============================================================================

# For Vercel deployment:
# Set GOOGLE_API_KEY in Vercel environment variables

# For Docker deployment:
# docker run -e GOOGLE_API_KEY=your_key your-image

# For Kubernetes with Workload Identity:
# Use service account annotations, no key files needed

# For GitHub Actions CI/CD:
# Store in repository secrets as GOOGLE_API_KEY