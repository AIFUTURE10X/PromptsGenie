{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "env": {
    "VITE_GEMINI_API_KEY": "@vite-gemini-api-key",
    "VITE_GEMINI_MODEL_TEXT": "@vite-gemini-model-text",
    "VITE_GEMINI_MODEL_IMAGES": "@vite-gemini-model-images"
  },
  "build": {
    "env": {
      "VITE_GEMINI_API_KEY": "@vite-gemini-api-key",
      "VITE_GEMINI_MODEL_TEXT": "@vite-gemini-model-text",
      "VITE_GEMINI_MODEL_IMAGES": "@vite-gemini-model-images"
    }
  }
}
